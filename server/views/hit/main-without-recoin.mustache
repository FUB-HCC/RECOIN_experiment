<!DOCTYPE html>
<html>
<head>
    {{> hit/partials/main-headers}}
    <script type="text/javascript">

        var impact, grade, condition;

        //LIVE
        //condition = localStorage.getItem("condition");
        //TESt
        condition = 1;
        recoinInit(condition);
        // TIMEOUT
        setTimeout(function () {
            on();
            //alert('Die Zeit ist um');
            impact = Math.round(impactOfEdits());
            grade = gradeEdits();
            $('#proceedToQuestionnaire').attr("href", "/questionnaire?recoinGrade=" + grade + "&averageRelevance=" + String(impact));

        }, 1 * 60 * 1000);

        function on() {
            $("#overlay").css("display", "block");
        }

        function off() {
            $("#overlay").css("display", "none");
        }
    </script>
</head>


<body>
<!-- OVERLAY-->
<div id="overlay" class="container">
    <p class="title_"> Your ten minutes are over, thank you for your input!</p>
    <div class="button" onclick="off()">
        <a id="proceedToQuestionnaire"> Proceed to Questionnaire. </a>
    </div>
</div>


<!--Wikidata-->
{{> hit/partials/wikidata-headings }}
<!--Menue Links Hauptseite-->
<div class="ui secondary grid">
    <div class="ui two column row">
        {{> hit/partials/sidebar}}
        <!--Item Bereich -->
        <div class="fourteen wide left aligned column" style="background-color: white;     padding-left: 25px;
                    padding-top: 10px">
            <div class="ui third grid" style="padding-left:15px;">
                <!--Item Name und ID-->
                <div class="two column row">
                    <!--Jesse-->
                    <div class="thirteen wide column" style="padding-left:0%">
                        <div>
                            <h1 id="firstHeading">Chris Hadfield <span id="itemID">(Q1076962)</span></h1>
                        </div>
                    </div>
                    <div class="three wide center aligned column">
                        <div id="recoinProgressbar"></div>
                    </div>
                </div>
            </div>
            <div class="row" style="padding-bottom: 0;">
                <div>
                    <span id="class"> Canadian astronaut</span> </br>
                    <span id="alias">Chris Austin Hadfield | Christopher Austin Hadfield |
                                    Chris A. Hadfield</span>
                </div>
            </div>
            <!-- No recoin here -->
            <!--Language Box-->
            {{> hit/partials/language-box}}
            <!--Statements-->
            {{> hit/partials/statements}}
        </div>
    </div>
</div>

<!--Footer-->
{{> hit/partials/footer }}

<script>
    $('.ui.accordion')
            .accordion();
</script>
</body>

</html>
