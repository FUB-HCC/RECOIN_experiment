<!DOCTYPE html>
<html>
<head>
    {{> hit/partials/main-headers}}
    <script type="text/javascript">
        $(document).ready(function () {
            recoinInit(1);
        });
    </script>
</head>
<body>
<!-- OVERLAY-->
{{> hit/partials/overlay}}

<!--Wikidata-->
{{> hit/partials/wikidata-headings }}
<!--Menue Links Hauptseite-->
<div class="ui secondary grid">
    <div class="ui two column row">
        {{> hit/partials/sidebar}}
        <!--Item Bereich -->
        <div class="fourteen wide left aligned column" style="background-color: white;     padding-left: 25px;
                    padding-top: 10px">
            <div class="ui third grid" style="padding-left:15px;">
                <!--Item Name und ID-->
                <div class="two column row">
                    <!--Jesse-->
                    <div class="thirteen wide column" style="padding-left:0%">
                        <div>
                            <h1 id="firstHeading">Chris Hadfield <span id="itemID">(Q1076962)</span></h1>
                        </div>
                    </div>
                    <div class="three wide center aligned column">
                        <div id="recoinProgressbar"></div>
                    </div>
                </div>
            </div>
            <div class="row" style="padding-bottom: 0;">
                <div>
                    <span id="class"> Canadian astronaut</span> </br>
                    <span id="alias">Chris Austin Hadfield | Christopher Austin Hadfield |
                                    Chris A. Hadfield</span>
                </div>
            </div>
            <!-- No recoin here -->
            <!--Language Box-->
            {{> hit/partials/language-box}}
            <!--Statements-->
            {{> hit/partials/statements}}
        </div>
    </div>
</div>

<!--Footer-->
{{> hit/partials/footer }}

<script>
    $('.ui.accordion')
            .accordion();
</script>
</body>

</html>
